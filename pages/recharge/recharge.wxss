/* pages/recharge/recharge.wxss */
.container{
	width: 100%;
	padding: 80rpx 40rpx;
	display: flex;
  flex-direction: column;
	align-items: flex-start;
	/* flex-wrap: wrap;
	max-height: 100rpx; */
}

.title{
	font-size: 30rpx;
	height: 60rpx;
	color: rgb(112, 112, 112);
}

.money-container{
	width: 100%;
	margin-top: 30rpx;
	display: flex;
	justify-content: center;
  flex-wrap: wrap;
}

.money{
	width: 28%;
	height: 100rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	margin: 2%;
	border:1rpx solid #6587b5;
	border-radius: 10rpx;
	color: #6587b5;
	cursor: pointer;
}

.money.selected {
  background-color: #6587b5;
  color: #fff;
}

.recharge{
	width: 100%;
	margin-top: 300rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.recharge-btn{
	background-color: #6587b5;
	color: white;
	border-radius: 30rpx;
}

.recharge-btn:active {
  background-color: #486183;
}