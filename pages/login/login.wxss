.button {
	display: flex;
	justify-content: center;
}

button.login-button {
	background-color: rgba(0, 0, 0, 0);
	border-color: white;
	border-radius: 30rpx;
	color: white;
	margin-top: 120rpx;
	margin-bottom: 50rpx;
	width: 300rpx;
}

.agreement {
	margin-top: 150rpx;
}

.agreement-cehckbox-text {
	font-size: 25rpx;
	color: #dadada;
}

.agreement-cehckbox-text-1 {
